{
  "compilerOptions": {
    "allowJs": true,
    "rootDir": "../",
    "baseUrl": "./src",
    "paths": {
      "@app/*": ["./app/*"],
      "@database/*": ["./database/*"],
      "@configs/*": ["./configs/*"],
      "@tests/*": ["./tests/*"],
      "@typings/*": ["./typings/*"],
      "@utils/*": ["./utils/*"],
      "@logs/*": ["./tools/logging/*"],
    },
    "strict": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "lib": ["es2015"],
  "files": ["./node_modules/@types/node/index.d.ts"],
  "include": ["<rootDir>/bin/server.ts", "src/**/*.ts"],
  "exclude": ["node_modules"],
  "pretty": true
}


